<Window x:Class="HiWPF.ChatWindow.SenderVoiceInvitation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HiWPF.ChatWindow"
        mc:Ignorable="d"
        Title="SenderVoiceInvitation" Height="78.7" Width="300">
    <Window.Background>
        <LinearGradientBrush EndPoint="1.112,0.543" StartPoint="-1.306,0.508">
            <GradientStop Color="Black" Offset="0"/>
            <GradientStop Color="#FF4CF1AE" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Label x:Name="label" Content="Waiting for response ..." HorizontalAlignment="Left" Margin="10,10,0,0" d:LayoutOverrides="HorizontalAlignment" Foreground="#FFF7F7F7" VerticalAlignment="Top" Height="28.298"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Right" Margin="0,10,10,9.402" Width="70.13" Click="btnCancel_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFB89999" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>

    </Grid>
</Window>
